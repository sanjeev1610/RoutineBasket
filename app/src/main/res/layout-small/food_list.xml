<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/menu_image_food"
            android:scaleType="centerCrop"
            android:src="@drawable/food"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
             android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/menu_name_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Name of menu"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/menu_share_food"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/ic_share_black_24dp"
                android:tint="@color/colorAccent"
                android:visibility="gone"
                android:alpha="0"/>

            <ImageView
                android:id="@+id/menu_fav_food"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:tint="@color/colorAccent" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/food_pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="RS "
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/food_pr"
            android:text="100"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp" />
"/>
            <ImageView
                android:id="@+id/menu_add_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_shopping_cart_black_24dp"
                android:tint="@color/colorAccent" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>