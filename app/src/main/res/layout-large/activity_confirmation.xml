<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobiapp4u.pc.routinebasket.ConfirmationActivity"
    android:background="@android:color/darker_gray"
    >

    <TextView
        android:id="@+id/txt_paymentid"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView4"
        android:inputType="textMultiLine"
        android:text="xxxxxx"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_orderid"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="229dp"
        android:layout_marginEnd="10dp"
        android:inputType="textMultiLine"
        android:text="xxxxxx"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:text="Routine Basket"
        android:textColor="@color/holo_blue_dark"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="RoutineBaket" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:text="TransactionId: "
        android:textColor="@android:color/holo_red_dark"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_orderid"
        android:layout_toStartOf="@+id/txt_orderid"
        android:text="OrderId: "
        android:textColor="@android:color/holo_red_dark"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:text="Done"
        android:textColor="@color/fbutton_color_green_sea"
        android:textSize="18sp" />

</RelativeLayout>